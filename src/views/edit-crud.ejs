<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update User's information</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <!-- jQuery library -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>


</head>

<body>
    <div class="container">
        <div class="row">
            <form action="/put-crud" method="post">
                <div class="form-row">
                    <div class="col-12 mt3">Update User's information </div>
                    <div class="form-group col-md-6">
                        <label for="inputFullName">Full name</label>
                        <input type="text" class="form-control" id="Full name" placeholder="Nguyễn Văn A"
                            name="fullName" value="<%= user.fullName %>">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputAddress">Address</label>
                        <input type="text" class="form-control" id="Address"
                            placeholder="123 đường A phường B quận C thành phố D" name="address"
                            value="<%= user.address %>">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="inputPhoneNumber">Phone number</label>
                        <input type="text" class="form-control" id="inputPhoneNumber" placeholder="0123456789"
                            name="phoneNumber" value="<%= user.phoneNumber %>" />
                    </div>
                </div>
                <input name="id" type="text" value="<%= user.id %>" hidden />
                <!-- <div name="id" hidden value="<%= user.id %>">
                    <%= user.id %>
                </div> -->
                <button type="submit" class="btn btn-outline-success">Success</button>
            </form>
        </div>
    </div>
</body>

</html>